[alias]
    st = status
    co = checkout
    ci = commit
    cm = commit -m
    pick = cherry-pick
    graph = log --graph --all --pretty=format:'%Cred%h%Creset - %Cgreen(%cr)%Creset %s%C(yellow)%d%Creset' --abbrev-commit --date=relative
	amend = commit
	unpushed = log origin/master..HEAD
	unp = log origin/master..HEAD
	d = difftool
	news = log -p HEAD@{1}..HEAD@{0}
	gii = commit --interactive
	p = push
	tb = commit --allow-empty -m \"Trigger build\"
	diffs = diff --cached
	l = log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
	ll = log --stat --abbrev-commit
	addpatch = add -p
	pp = !git pull && git push || git pp
	g = grep
	s = stash
	cm = !git commit -m
	aa = add -A
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[core]
	pager = less -r
	excludesfile = /Users/lstrojny/.gitignore_global
	compression = 9
	ignorecase = true
[push]
	default = simple
[pull]
	rebase = true
	ff = only
[repack]
	usedeltabaseoffset = true
[help]
	autocorrect = 1
[merge]
	renamelimit = 10000
	tool = kdiff3
[mergetool]
	tool = kdiff3
	keepBackup = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
[fetch]
	prune = true
    fsckObjects = true
